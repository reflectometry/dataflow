CC	= gcc
CFLAGS	= -mno-cygwin -c 
LIBS	= -lmatrix -lm
LDFLAGS = -shared -s
LIBDIRS = c:/ubmatrix/matrix \
	c:/python24/libs \
	c:/python24/PCBUILD

OBJ=	trigd.o \
	cell.o
all: cell

cell:	trigd.h cell.c
	$(CC) $(CFLAGS) $(LDFLAGS) $(OBJ) $(LIBS) -o cell

trigd.o:	trigd.c trigd.h 
cell.o:	cell.c cell.h trigd.h

clean:
	rm -f *.o
	rm -f *.a
	rm -R build

